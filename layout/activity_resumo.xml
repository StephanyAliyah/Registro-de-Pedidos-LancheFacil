<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/appColor1"
    tools:context=".ResumoActivity">

    <!-- Imagem -->
    <ImageView
        android:id="@+id/imageResumo"
        android:layout_width="303dp"
        android:layout_height="222dp"
        android:contentDescription="Pedido concluído"
        android:src="@drawable/pedido_concluido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/textT3Titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="@string/appT3Titulo"
        android:textColor="@color/appColor4"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageResumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nome: -->
    <TextView
        android:id="@+id/textT3Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Nome:"
        android:textColor="@color/appColor4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textT3Titulo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textValorNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="(nome aqui)"
        android:textColor="@color/appColor5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textT3Titulo"
        app:layout_constraintStart_toEndOf="@id/textT3Nome"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pedido: -->
    <TextView
        android:id="@+id/textT3Pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Pedido:"
        android:textColor="@color/appColor4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textT3Nome"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textValorPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="(pedido aqui)"
        android:textColor="@color/appColor5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textT3Nome"
        app:layout_constraintStart_toEndOf="@id/textT3Pedidos"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão -->
    <Button
        android:id="@+id/btnVoltarInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/appColor3"
        android:fontFamily="monospace"
        android:onClick="voltarInicio"
        android:text="@string/appT3BtnVoltar"
        android:textColor="@color/appColor1"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textT3Pedidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
